{
  "name": "test-automation-harness",
  "version": "0.7.0",
  "description": "A comprehensive TypeScript/Node.js test automation platform with AI-powered self-healing capabilities - Pre-Production (Release Config Ready)",
  "main": "dist/index.js",
  "bin": {
    "test-harness": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/ui dist/",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:report": "npx playwright show-report artifacts/reports/html",
    "artifacts:clean": "rm -rf artifacts/*",
    "artifacts:clean-screenshots": "rm -rf artifacts/screenshots/*",
    "artifacts:clean-videos": "rm -rf artifacts/videos/*",
    "artifacts:clean-traces": "rm -rf artifacts/traces/*",
    "lint": "echo \"Linting not configured yet\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "test-automation",
    "self-healing",
    "playwright",
    "jest",
    "k6",
    "owasp-zap",
    "typescript",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "@types/js-yaml": "^4.0.9",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "playwright": "^1.55.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.5",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "jest": "^30.1.3",
    "semantic-release": "^24.2.7",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
